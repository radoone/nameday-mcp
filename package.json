{
  "name": "nameday-mcp-server",
  "version": "1.0.0",
  "description": "MCP server providing nameday information for multiple countries including Slovakia, Czech Republic, Poland, and others. Find when a name has its nameday or discover which names celebrate on a specific date.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "vercel-build": "npm run build",
    "dev": "tsx src/index.ts",
    "dev:sse": "MCP_TRANSPORT=sse tsx src/index.ts",
    "start": "node dist/index.js",
    "start:sse": "MCP_TRANSPORT=sse node dist/index.js",
    "test": "node scripts/test-online.js"
  },
  "keywords": [
    "mcp",
    "nameday",
    "slovak",
    "czech",
    "polish",
    "namedays",
    "calendar",
    "name-days",
    "fastify",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "fastify": "^5.4.0",
    "@fastify/cors": "^11.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "@vercel/node": "^1.14.0"
  }
} 